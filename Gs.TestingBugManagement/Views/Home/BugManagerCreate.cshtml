@model Gs.TestingBugManagement.Models.BugManagement

<h4>BugManagement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BugManagerCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
            <div class="form-group">
                <label asp-for="BugNumber" class="control-label"></label>
                <input asp-for="BugNumber" class="form-control" />
