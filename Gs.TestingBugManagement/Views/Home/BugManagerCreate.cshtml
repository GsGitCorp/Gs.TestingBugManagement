                <label asp-for="AssignedTo" class="control-label"></label>
                <input asp-for="AssignedTo" class="form-control" />
                <span asp-validation-for="AssignedTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BugState" class="control-label"></label>
                <input asp-for="BugState" class="form-control" />
                <span asp-validation-for="BugState" class="text-danger"></span>
            </div>
